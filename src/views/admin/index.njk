{% extends "admin/layout.njk" %}

{% block page_title %}
  Dashboard | {{ app_name }}
{% endblock page_title %}

{% block content %}
<div class="content-wrapper">
  <!-- Page header -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 display-time"></h1>
        </div>
        <div class="col-sm-6">
          <div class="float-sm-right display-date"></div>
        </div>
      </div>
    </div>
  </div>
  <!-- ./Page header -->

  <!-- Main content -->
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6" data-widget-name="latest-registration">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Recent Users</h3>
            </div>
            <div class="card-body p-0">
              <ul class="users-list clearfix"></ul>
            </div>
            <div class="card-footer text-center">
              <a href="{{ adminRoute('/users') }}">View all users</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ./Main content -->
</div>
{% endblock content %}

{% block page_script %}
<script type="text/javascript" nonce="{{ nonce }}">
jQuery(() => {
  $.ajax({
    url: '/api/users',
    data: {
      size: 8,
      columns: [
        {
          name: 'id'
        }
      ],
      order: [
        {
          dir: 'desc',
          name: 'id',
        }
      ]
    },
    success: ({ data }) => {
      $('ul.users-list').append(
        data.map((user) => {
          const photoProfile = user.photoProfile === null ? '/public/assets/adminLTE-3.2.0/img/user-placeholder-128x128.png' : user.photoProfile;
          return `
            <li>
              <img src="${photoProfile}" style="height:80px;width:80px;" alt="User profile image"><a class="users-list-name" href="#" user-id="${user.id}">${user.fullName}</a>
              <span class="users-list-date">${moment(user.createdAt).fromNow()}</span>
            </li>`;
        }),
      );
    }
  });
})
</script>
{% endblock page_script %}
